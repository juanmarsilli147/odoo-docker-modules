<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_wallet_deposit_wizard_form" model="ir.ui.view">
        <field name="name">wallet.deposit.wizard.form</field>
        <field name="model">wallet.deposit.wizard</field>
        <field name="arch" type="xml">
            <form string="Simular Depósito Inicial">
                <group>
                    <group>
                        <field name="wallet_id" readonly="1"/>
                        <field name="amount" required="1"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                </group>
                <footer>
                    <button name="action_apply_deposit" string="Confirmar Depósito" 
                            type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wallet_deposit_wizard" model="ir.actions.act_window">
        <field name="name">Depósito de Dinero</field>
        <field name="res_model">wallet.deposit.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_wallet_transfer_wizard_form" model="ir.ui.view">
        <field name="name">wallet.transfer.wizard.form</field>
        <field name="model">wallet.transfer.wizard</field>
        <field name="arch" type="xml">
            <form string="Transferir Dinero">
                <group>
                    <field name="from_wallet_id" readonly="1"/>
                    <field name="to_wallet_id" domain="[('id', '!=', from_wallet_id), ('state', '=', 'active')]" placeholder="Seleccione destinatario..."/>
                    <field name="amount"/>
                    <field name="currency_id" invisible="1"/>
                </group>
                <footer>
                    <button name="action_apply_transfer" string="Enviar Dinero" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wallet_transfer_wizard" model="ir.actions.act_window">
        <field name="name">Transferencia Bancaria</field>
        <field name="res_model">wallet.transfer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>