<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_wallet" model="ir.ui.view">
        <field name="name">account.move.form.inherit.wallet</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ref']" position="after">
                <field name="use_wallet" widget="boolean_toggle" invisible="move_type != 'out_invoice'"/>
            </xpath>
        </field>
    </record>
</odoo>