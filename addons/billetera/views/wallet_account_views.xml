<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_wallet_account_list" model="ir.ui.view">
            <field name="name">wallet.account.list</field>
            <field name="model">wallet.account</field>
            <field name="arch" type="xml">
                <list string="Billeteras" decoration-success="state == 'active'" decoration-info="state == 'draft'">
                    <field name="partner_id"/>
                    <field name="balance" sum="Total Saldo"/>
                    <field name="currency_id" column_invisible="True"/>
                    <field name="state" widget="badge" decoration-success="state == 'active'" decoration-info="state == 'draft'"/>
                </list>
            </field>
        </record>

        <record id="view_wallet_account_form" model="ir.ui.view">
            <field name="name">wallet.account.form</field>
            <field name="model">wallet.account</field>
            <field name="arch" type="xml">
                <form string="Billetera">
                    <header>
                        <button name="action_activate" string="Activar Cuenta" type="object" 
                                class="oe_highlight" invisible="state != 'draft'"/>
                        
                        <button name="%(action_wallet_deposit_wizard)d" string="Ingreso" 
                                type="action" invisible="state != 'active'" context="{'default_wallet_id': id}"/>

                        <button name="%(action_wallet_transfer_wizard)d" 
                                string="Transferir" 
                                type="action" 
                                class="btn-primary" 
                                invisible="state != 'active'"
                                context="{'default_wallet_id': id, 'default_from_wallet_id': id}"/>
                        
                        <field name="state" widget="statusbar" statusbar_visible="draft,active,blocked"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="partner_id"/>
                            <h1><field name="partner_id" placeholder="Nombre del contacto"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="currency_id" invisible="1"/>
                                <field name="balance" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Movimientos HistÃ³ricos" name="transactions">
                                <field name="transaction_ids" readonly="1">
                                    <list>
                                        <field name="date"/>
                                        <field name="name"/>
                                        <field name="type"/>
                                        <field name="amount" sum="Total"/>
                                        <field name="state" widget="badge" 
                                               decoration-success="state == 'confirmed'" 
                                               decoration-muted="state == 'draft'"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_wallet_account" model="ir.actions.act_window">
            <field name="name">Billeteras</field>
            <field name="res_model">wallet.account</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea la primera billetera para un contacto.
                </p>
            </field>
        </record>
    </data>
</odoo>