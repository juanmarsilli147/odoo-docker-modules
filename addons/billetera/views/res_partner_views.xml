<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_wallet_button" model="ir.ui.view">
        <field name="name">res.partner.form.wallet.button</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_wallet_history" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-money">
                    <field name="wallet_balance" widget="statinfo" string="Billetera"/>
                </button>
            </div>
        </field>
    </record>
</odoo>