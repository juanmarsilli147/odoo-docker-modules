<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_books_list" model="ir.ui.view">
        <field name="name">biblioteca.books.list</field>
        <field name="model">biblioteca.books</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="author"/>
                <field name="is_loaned"/>
            </list>
        </field>
    </record>


    <record id="view_loans_list" model="ir.ui.view">
        <field name="name">biblioteca.loan.list</field>
        <field name="model">biblioteca.loan</field>
        <field name="arch" type="xml">
            <list>
                <field name="book_id"/>
                <field name="partner_id"/>
                <field name="loan_date"/>
                <field name="return_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_loan_form" model="ir.ui.view">
        <field name="name">biblioteca.loan.form</field>
        <field name="model">biblioteca.loan</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirmar" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_return" string="Devolver" type="object" invisible="state != 'confirmed'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="book_id"/>
                        <field name="partner_id"/>
                        <field name="loan_date"/>
                        <field name="return_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_books" model="ir.actions.act_window">
        <field name="name">Libros</field>
        <field name="res_model">biblioteca.books</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_loans" model="ir.actions.act_window">
        <field name="name">Préstamos</field>
        <field name="res_model">biblioteca.loan</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_biblio_root" name="Mi Biblioteca"/>
    <menuitem id="menu_biblio_books" name="Libros" parent="menu_biblio_root" action="action_books"/>
    <menuitem id="menu_biblio_loans" name="Préstamos" parent="menu_biblio_root" action="action_loans"/>
</odoo>